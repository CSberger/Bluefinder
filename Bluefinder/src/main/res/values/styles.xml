<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
                Theme customizations available in newer API levels can go in
                res/values-vXX/styles.xml, while customizations related to
                backward-compatibility can go here.
            -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- <item name="android:actionBarStyle"></item> -->

        <item name="android:actionBarStyle">@style/MyActionBar</item>


        <item name="android:popupMenuStyle">@style/MyActionBar.PopupMenuStyle</item>
        <item name="android:actionMenuTextAppearance">@style/MyActionBar.MenuTextStyle</item>
        <!--
        <item name="android:dropDownItemStyle">@style/MyDropdownItem</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView</item>
-->

        <!-- <item name="android:actionMenuTextColor">#FF0</item> -->


    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/bar_blue</item>
        <item name="android:popupBackground">#ff007ca6</item>
        <!--<item name="android:textColor">@color/actionBarTextWhite</item> -->
        <item name="android:titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/MyActionBar.TitleTextStyle</item>
        <item name="android:actionMenuTextAppearance">@style/MyActionBar.MenuTextStyle</item>
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>


    </style>

    <style name="MyActionBar.TitleTextStyle" parent="MyActionBar.TitleTextStyle">
        <item name="android:textSize">20sp</item>
        <!--
        <item name="android:textColor">@color/actionBarTextWhite</item>
        -->
        <item name="android:textColor">#fff</item>
    </style>

    <style name="MyActionBar.subtitleTextStyle" parent="MyActionBar.TitleTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/actionBarTextWhite</item>
    </style>

    <style name="MyActionBar.ListView" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>

        <item name="android:listSelector">@drawable/list_item_selector_colors</item>

        <item name="android:textColor">@color/actionBarTextWhite</item>

    </style>

    <style name="MyActionBar.MenuTextStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>


    <style name="MyActionBar.PopupMenuStyle" parent="@android:style/Widget.Holo.Light.PopupWindow">

        <item name="android:popupBackground">#ff0061a6</item>

        <!--<item name="android:actionMenuTextColor">@color/actionBarTextWhite</item> -->
        <item name="android:textColor">#FF0</item>
        <item name="android:textColorPrimary">#FF0</item>
        <item name="android:actionMenuTextAppearance">@style/MyActionBar.MenuTextStyle</item>

    </style>


</resources>