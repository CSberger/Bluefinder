<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
                Theme customizations available in newer API levels can go in
                res/values-vXX/styles.xml, while customizations related to
                backward-compatibility can go here.
            -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:popupMenuStyle">@style/MyActionBar.PopupMenuStyle</item>
        <item name="android:actionMenuTextAppearance">@style/MyActionBar.MenuTextStyle</item>
    </style>

    <style name="DeviceTextName" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:text">@string/device_name_text</item>
        <item name="android:textColor">@color/actionBarTextWhite</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/bar_blue</item>d
        <item name="android:popupBackground">#ff007ca6</item>
        <item name="android:titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/MyActionBar.TitleTextStyle</item>
        <item name="android:actionMenuTextAppearance">@style/MyActionBar.MenuTextStyle</item>
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>
    </style>

    <style name="MyActionBar.TitleTextStyle" parent="MyActionBar.TitleTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="MyActionBar.subtitleTextStyle" parent="MyActionBar.TitleTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/actionBarTextWhite</item>
    </style>

    <style name="DeviceListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/list_bg_color</item>
    </style>

    <style name="MyActionBar.MenuTextStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MyActionBar.PopupMenuStyle" parent="@android:style/Widget.Holo.Light.PopupWindow">
        <item name="android:popupBackground">#ff0061a6</item>
        <item name="android:actionMenuTextAppearance">@style/MyActionBar.MenuTextStyle</item>
    </style>
</resources>